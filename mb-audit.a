COMPONENT_CARD		= $00
COMPONENT_6522		= $10
COMPONENT_AY8913	= $20
COMPONENT_SC01		= $30
COMPONENT_SSI263	= $40

!source "chip-6522.a"
!source "chip-ay8913.a"
!source "chip-sc01.a"
!source "chip-ssi263.a"

